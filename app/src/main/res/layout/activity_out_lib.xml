<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context="com.ld.materialmanagement.activity.LoginActivity">

    <include layout="@layout/include_tool_bar"/>

    <TableLayout
        android:id="@+id/tb_in_lib_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/space_4"
        android:stretchColumns="*"
        >

        <TableRow>

            <com.ld.materialmanagement.widget.DescriptionView
                android:id="@+id/dv_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:descTextColor="@color/text_blue"
                app:titleText="出库单号"
                />

            <com.ld.materialmanagement.widget.DescriptionView
                android:id="@+id/dv_out_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:descTextColor="@color/text_blue"
                app:titleText="出库日期"
                />


        </TableRow>

        <TableRow>

            <com.ld.materialmanagement.widget.DescriptionView
                android:id="@+id/dv_shen_qing_dan_wei"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:descTextColor="@color/text_blue"
                app:titleText="出库单申请单位"
                />

            <com.ld.materialmanagement.widget.DescriptionView
                android:id="@+id/dv_contract_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:descTextColor="@color/text_blue"
                app:titleText="合同编号"
                />
        </TableRow>

        <TableRow>


            <com.ld.materialmanagement.widget.DescriptionView
                android:id="@+id/dv_company_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:descTextColor="@color/text_blue"
                app:titleText="公司编号"
                />

            <com.ld.materialmanagement.widget.DescriptionView
                android:id="@+id/dv_ling_yong_bu_men"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:descTextColor="@color/text_blue"
                app:titleText="领用部门"
                />

        </TableRow>

        <TableRow>

            <com.ld.materialmanagement.widget.DescriptionView
                android:id="@+id/dv_supplier_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:descTextColor="@color/text_blue"
                app:titleText="供货单位"
                />

            <com.ld.materialmanagement.widget.DescriptionView
                android:id="@+id/dv_plan_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:descTextColor="@color/text_blue"
                app:titleText="预算编号"
                />


        </TableRow>

        <TableRow>

            <com.ld.materialmanagement.widget.DescriptionView
                android:id="@+id/dv_signer_bu_men"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:descTextColor="@color/text_blue"
                app:titleText="所属部门 (专业)"
                />

            <com.ld.materialmanagement.widget.DescriptionView
                android:id="@+id/dv_signer_wu_zi_zhu_guan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:descTextColor="@color/text_blue"
                app:titleText="物资主管"
                />
        </TableRow>

        <TableRow>


            <com.ld.materialmanagement.widget.DescriptionView
                android:id="@+id/dv_signer_jing_ban_ben"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:descTextColor="@color/text_blue"
                app:titleText="领用人"
                />

            <com.ld.materialmanagement.widget.DescriptionView
                android:id="@+id/dv_SignerKuGuanYuan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:descTextColor="@color/text_blue"
                app:titleText="库管员"
                />
        </TableRow>


    </TableLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_level8"
        android:background="@color/bga_adapter_divider"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/size_level4"
        android:text="@string/backup_list"
        android:textSize="@dimen/text_size_10"
        />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycle_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>
